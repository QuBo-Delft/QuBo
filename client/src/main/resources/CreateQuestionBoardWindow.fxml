<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.BoardCreationController">
   <AnchorPane prefHeight="503.0" prefWidth="865.0">
         <Pane layoutX="61.0" layoutY="80.0" prefHeight="474.0" prefWidth="823.0">
               <Label layoutX="23.0" layoutY="17.0" mouseTransparent="true" prefHeight="44.0" prefWidth="780.0" text="Create Question Board">
                  <font>
                     <Font size="21.0" />
                  </font>
               </Label>
               <Label layoutX="195.0" layoutY="100.0" text="Title">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <TextField fx:id="title" layoutX="272.0" layoutY="97.0" prefHeight="27.0" prefWidth="194.0" promptText="Title of question board" />
               <Button layoutX="524.0" layoutY="95.0" mnemonicParsing="false" onAction="#createNowBtnClicked" text="CREATE NOW">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
               <Label layoutX="149.0" layoutY="179.0" text="Schedule">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
               <DatePicker fx:id="startDate" layoutX="272.0" layoutY="177.0" promptText="Date" />
               <Button layoutX="534.0" layoutY="205.0" mnemonicParsing="false" onAction="#scheduleBtnClicked" text="SCHEDULE">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Button>
               <Label layoutX="577.0" layoutY="155.0" text="OR">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <Spinner fx:id="hoursSpinner" layoutX="271.0" layoutY="223.0" prefHeight="27.0" prefWidth="89.0">
                  <valueFactory>
                     <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" initialValue="0" max="23" min="0" />
                  </valueFactory>
               </Spinner>
               <Spinner fx:id="minutesSpinner" layoutX="380.0" layoutY="223.0" prefHeight="27.0" prefWidth="83.0">
                  <valueFactory>
                     <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" initialValue="0" max="59" min="0" />
                  </valueFactory>
               </Spinner>
               <Label layoutX="274.0" layoutY="261.0" text="Hours" textFill="#9e9e9e">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <Label layoutX="382.0" layoutY="262.0" text="Minutes" textFill="#9e9e9e">
                  <font>
                     <Font size="14.0" />
                  </font>

               </Label>
         </Pane>
   </AnchorPane>
</VBox>
